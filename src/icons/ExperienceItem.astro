---
    export interface Props {
        date: string;
        title: string;
        description: string;
        company: string;
        link?: string;
    }
    const {date, title, company, description, link} = Astro.props
---

<div class="absolute w-3 h-3 bg-[#9AD4D6] rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-[#FFB140]"></div>
<div class="block">
    <h3 class="lg:text-lg text-2xs font-bold text-[#072530] inline-block px-2 bg-[#9AD4D6] rounded-full">{title}</h3>
</div>
<div class="block mt-2">
    <h4 class="text-2xs font-semibold text-[#FCDC73] inline-block rounded-full">{company}</h4>
</div>
<time class="mb-3 text-sm font-normal leading-none text-[#FCDC73] block mt-1">{date}</time>
<p class="mb-4 text-base font-normal text-gray-200 text-pretty">{description}</p>
{
    link && (
        <a href={link} class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700  focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">Learn more... 
            <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
    )
}

